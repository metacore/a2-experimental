	BitmapDesc* = RECORD 
		width*, height*, depth*: INTEGER; 
		wth*: LONGINT; 
		address*: ADDRESS; 
		size: LONGINT; 
	END; 

	Buffer = RECORD 
		bytes: ARRAY BufSize OF CHAR; 
	END; 
VAR 
	buffer: POINTER TO Buffer; 

	PROCEDURE ^ Define*(B: Bitmap; width, height, depth: INTEGER; address: ADDRESS); 
