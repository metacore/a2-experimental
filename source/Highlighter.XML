<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<Highlighter>
	<Styles>
		<Style name="Comment" fontname="Courier" fontsize="10" fontstyle="{}" color="FF0000FF" bgcolor="0" voff="0"/>
		<Style name="Control" fontname="Courier" fontsize="10" fontstyle="{0}" color="FF0000FF" bgcolor="0" voff="0"/>
		<Style name="Modifiers" fontname="Courier" fontsize="12" fontstyle="{}" color="FFFF00FF" bgcolor="FFFFFFFF" voff="0"/>
		<Style name="Locking" fontname="Courier" fontsize="10" fontstyle="{}" color="FF00FFFF" bgcolor="0" voff="0"/>		
		<Style name="Checks" fontname="Courier" fontsize="10" fontstyle="{0}" color="FFFF" bgcolor="0" voff="0"/>		
		<Style name="Threads" fontname="Courier" fontsize="10" fontstyle="{}" color="FFFF" bgcolor="0" voff="0"/>
		<Style name="Structure" fontname="Courier" fontsize="10" fontstyle="{0}" color="FFFF" bgcolor="FFFFFFFF" voff="0"/>
		<Style name="Operators" fontname="Courier" fontsize="10" fontstyle="{0}" color="FFFF" bgcolor="FFFFFFFF" voff="0"/>
		<Style name="Values" fontname="Courier" fontsize="10" fontstyle="{0}" color="FFFF" bgcolor="FFFFFFFF" voff="0"/>
		<Style name="Types" fontname="Courier" fontsize="10" fontstyle="{}" color="FFFF" bgcolor="FFFFFFFF" voff="0"/>
		<Style name="ComplexTypes" fontname="Courier" fontsize="10" fontstyle="{0}" color="FFFF" bgcolor="FFFFFFFF" voff="0"/>
		<Style name="Lowlevel" fontname="Courier" fontsize="10" fontstyle="{}" color="FF0000FF" bgcolor="FFFFFFFF" voff="0"/>
		<Style name="Dangerous" fontname="Courier" fontsize="10" fontstyle="{0}" color="FF0000FF" bgcolor="FFFFFFFF" voff="0"/>
	</Styles>
	
	<Languages>
		<Language name="Oberon">
			<Keywords>
				<Group style="Control">
					FOR TO WHILE DO REPEAT UNTIL IF THEN ELSE ELSIF
					LOOP EXIT CASE BY RETURN
				</Group>
				<Group style="Modifiers">
					DELEGATE  UNTRACED
				</Group>
				<Group style="Locking">
					EXCLUSIVE
				</Group>
				<Group style="Checks">
					ASSERT
				</Group>
				<Group style="Threads">
					ACTIVE SHARED PRIORITY
				</Group>
				<Group style="Structure">
					MODULE IMPORT TYPE DEFINITION REFINES CONST VAR PROCEDURE
					BEGIN END
					VAR CONST
				</Group>
				<Group style="Operators">
					DIV MOD IN IS OR 
				</Group>
				<Group style="Values">
					NIL TRUE FALSE
				</Group>
				<Group style="BasicTypes">
					BOOLEAN
					SHORTINT INTEGER LONGINT
					REAL LONGREAL
					SET
					CHAR
				</Group>
				<Group style="ComplexTypes">
					RECORD ARRAY POINTER OBJECT
				</Group>
				<Group style="Lowlevel">
					SYSTEM
					SYSTEM.GET SYSTEM.GET8 SYSTEM.GET16 SYSTEM.GET32
					SYSTEM.SIZEOF SYSTEM.TYPEOF
				</Group>
				<Group style="Dangerous">
					UNTRACED
					SYSTEM.PUT SYSTEM.PUT8 SYSTEM.PUT16 SYSTEM.PUT32
					SYSTEM.VAL
					SYSTEM.ADR
					HALT
				</Group>
			</Keywords>
			
			<Regions>
				<Region
					style="Comment"
					open="(*" close="*)" nesting="TRUE" multiline="TRUE"
				/>
			</Regions>
		
		</Language>
	
	</Languages>

</Highlighter>