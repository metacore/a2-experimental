<?xml version="1.0" encoding="ISO-8859-1" standalone="yes"?>

<!-- 
Aos configuration 

To edit: EditTools.OpenAscii AosConfig.XML
To update: Configuration.Init
-->

<!DOCTYPE Config [
	<!ATTLIST Section 
		name NMTOKEN #REQUIRED
	>
	<!ATTLIST Setting 
		name NMTOKEN #IMPLIED
		value CDATA #REQUIRED
	>
]>

<Config>
	<!-- Localization -->
	<Section name="Local">
		<Section name="Formats">
			<Section name="Date">
				<Setting name="Short" value="dd.mm.yy"/>
				<Setting name="Long" value="www, dd.mm.yyyy"/>
			</Section>
			<Section name="Time">
				<Setting name="Short" value="hh:nn"/>
				<Setting name="Long" value="hh:nn:ss"/>
			</Section>
			<Section name="Timezone">
				<Setting name="Name" value="GMT-1"/>
				<Setting name="GMTDiff" value="+1"/>
			</Section>
		</Section>
	</Section>

	<!-- File systems -->	
	<Section name="Files">
		<Section name="Alias">
			<Setting name="AosFS" value="DiskVolumes.New;DiskFS.NewFS"/>
			<Setting name="NatFS" value="DiskVolumes.New;DiskFS.NewFS"/>
			<Setting name="RamFS" value="RAMVolumes.New;DiskFS.NewFS"/>
			<Setting name="FatFS" value="FATVolumes.New;FATFiles.NewFS"/>
			<Setting name="IsoFS" value="ISO9660Volumes.New;ISO9660Files.NewFS"/>
		</Section>
	</Section>
	
	<!-- Autostart -->
	<Section name="Autostart">
		<Setting value="WebFTPServer.Start"/>
		<Setting value="WMVNCView.Install Aos db33070ae4 5901 0 0 1280 1024"/>
		<Setting value="WMVNCView.Install guti oberon 5999 0 0 1280 1024"/>
		<Setting value="FSTools.Mount RAM RamFS 32768 4096"/>
		<Setting value="QuoteServer.Open"/>
	</Section>

	<!-- Window Manager -->
	<Section name="WindowManager">
		<Section name="FontManager">
			<Section name="OberonFonts">
				<Setting name="Exact" value="WMOberonFonts.LoadExactFont" />
				<Setting name="Approximate" value="WMOberonFonts.LoadApproximateFont" />
			</Section>
			<Section name="BitmapFonts">
				<Setting name="Exact" value="WMBitmapFonts.LoadExactFont" />
				<Setting name="Approximate" value="WMBitmalFonts.LoadApproximateFont" />
			</Section>
			<Section name="CCGFonts">
				<Setting name="Exact" value="WMCCGFonts.LoadExactFont" />
				<Setting name="Approximate" value="WMCCGFonts.LoadApproximateFont" />
			</Section>
		</Section>
	</Section>	

	<!-- Image formats for Raster.Load and Raster.Store -->
	<Section name="ImageFormats">
		<Section name="Load">
			<Setting name="Pict" value="PictImages.AosLoad"/>
			<Setting name="bmp" value="AosBMPImages.AosLoad"/>
			<Setting name="gif" value="AosGIFImages.AosLoad"/>
			<Setting name="png" value="AosPNGImages.AosLoad"/>
		</Section>
		<Section name="Store">
			<Setting name="Pict" value="PictImages.AosStore"/>
			<Setting name="bmp" value="AosBMPImages.AosStore"/>
		</Section>
	</Section>
	
	<!-- Font formats for GfxFonts.Open -->
	<Section name="FontFormats">
		<Setting name="TTF" value="GfxOType.Install"/>
		<Setting name="pk" value="GfxPKFonts.Install"/>
	</Section>
	
	<!-- FileManager -->
	<Section name="FileManager">
		<Section name="Plugins">
			<Setting name="Default" value="FMFilesPlugin.Start"/>
			<Setting name="Test" value="FMTestPlugin.Start"/>
		</Section>
		<Section name="Filehandlers">
			<!-- use lower case for name -->
			<Setting name="mp3" value="MP3Player.Play" />
			<Setting name="pls" value="MP3Player.PlayPlaylist" />
			<Setting name="png" value="WMPicView.Open" />
			<Setting name="pict" value="WMPicView.Open" />
			<Setting name="gif" value="WMPicView.Open" />
			<Setting name="bmp" value="WMPicView.Open" />
		</Section>
	</Section>
	
	<!-- Paco Compiler -->
	<Section name="Paco">
		<Setting name="ErrorMessages" value="Errors.XML" />
	</Section>
	
	<!-- Example of nested sections -->
	<Section name="A">
		<Section name="B">
			<Section name="C">
				<Setting name="D" value="Hello world"/>
			</Section>
		</Section>
	</Section>
	
</Config>
