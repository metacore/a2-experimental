		PROCEDURE ^ ToStream*(w: Streams.Writer); 
		PROCEDURE ^ FromXML*(xml: XML.Element); 
		PROCEDURE ^ ToXML*(VAR element: XML.Element); 
		PROCEDURE ^ WriteXML*(w: Streams.Writer; context: ANY; indent: LONGINT); 
		PROCEDURE ^ Finalize*; 
